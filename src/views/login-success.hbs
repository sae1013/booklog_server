<html>
  <head>
    <title>Authentication Success</title>
  </head>
  <body>
    <script>
      window.onload = () => { 
        const user = '{{{user}}}';
        const status = '{{{status}}}'
        const errorMessage = '{{{errorMessage}}}';

        const targetOrigin = "http://localhost:3000";
        const response = JSON.stringify({
          user,status,errorMessage
        })
        window.opener.postMessage(response,targetOrigin);
        window.close(); 
      }

    </script>
  </body>
</html>